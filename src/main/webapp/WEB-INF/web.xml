<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
	<filter>
		<filter-name>encoding</filter-name>
		<filter-class>com.iu.main.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>mc</servlet-name>
		<servlet-class>com.iu.main.member.MemberController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>mc</servlet-name>
		<url-pattern>/member/*</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>bbc</servlet-name>
		<servlet-class>com.iu.main.bankBook.BankBookController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>bbc</servlet-name>
		<url-pattern>/bankbook/*</url-pattern>
	</servlet-mapping>

	<!-- Tomcat(Was)에게 Servlet 객체 생성 -->
	<servlet>
		<servlet-name>fc</servlet-name>
		<servlet-class>com.iu.main.FrontController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>fc</servlet-name>
		<url-pattern>/index.do</url-pattern>
	</servlet-mapping>
</web-app>